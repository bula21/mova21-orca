= image_pack_tag 'cropped-2012_kala_symbolisches_zeltstadt_008.jpg', class: 'img-fluid'

.h1 = t('units.index.title')

= link_to t('buttons.create'), new_unit_path, class: 'btn btn-primary mb-3'

.row
  - Unit.all.each do |unit|
    .col-6
      .card.m-2
        .card-body
          h5.card-title = unit.title
          p.card-text = unit.abteilung
          = link_to t('buttons.edit'), edit_unit_path(unit), class: 'btn btn-primary'

