= simple_form_for(@filter, url: activities_path, method: :GET, scope: '') do |f|
  = f.hidden_field :locale, value: I18n.locale
  .d-flex.flex-row.justify-content-around
    = f.input :min_participants_count
    = f.input :tags, as: :check_boxes, collection: Tag.all.map { |t| [t.label, t.id.to_s] }, include_hidden: false,
              wrapper_html: { class: 'scrollable' }
    = f.input :languages, as: :check_boxes, collection: Activity::LANGUAGES.map { |t| [Activity.human_attribute_name(t), t.to_s] },
            include_hidden: false

    = f.input :stufe, collection: Stufe.all.map { |t| [t.name, t.id.to_s] },
              include_hidden: false
    = f.input :activity_category, collection: ActivityCategory.roots,
              as: :grouped_select,
              group_method: :children, group_label_method: :label,
              label_method: :full_label

  .d-flex.flex-row
    = f.submit 'Filtern', class: 'btn btn-secondary'
    = link_to t('buttons.reset'), activities_path, class: 'btn btn-primary '

